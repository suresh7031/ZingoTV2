<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_item"
    android:nextFocusRight="@id/chevron"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/text_selector"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/channel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/img_title"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/item_image"
            android:gravity="center"
            android:text="Arjun"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/events"
        android:layout_width="306dp"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/channel"
        android:layout_marginRight="-310dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chevron"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/events"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_chevron_left_black_24dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/chright"
                android:background="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/event"
            android:layout_width="114dp"
            android:layout_height="49dp"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>